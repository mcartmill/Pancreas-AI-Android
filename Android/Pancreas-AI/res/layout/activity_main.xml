<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_surface"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Pancreas AI"
            app:titleTextColor="@color/text_primary"
            app:subtitleTextColor="@color/text_secondary"
            android:background="@color/bg_surface" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clipToPadding="false"
        android:paddingBottom="96dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Progress -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="@color/dexcom_cyan"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <!-- Last Updated -->
            <TextView
                android:id="@+id/tvLastUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"
                android:layout_marginBottom="8dp" />

            <!-- No Credentials -->
            <LinearLayout
                android:id="@+id/noCredentialsGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#x1FA78;"
                    android:textSize="64sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect Your Dexcom"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvNoCredsMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Settings and enter your Dexcom username and password."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoToSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Settings"
                    app:backgroundTint="@color/dexcom_cyan"
                    android:textColor="#000000" />

            </LinearLayout>

            <!-- Current Reading Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/bg_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvCurrentGlucose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---"
                            android:textColor="@color/glucose_normal"
                            android:textSize="72sp"
                            android:textStyle="bold"
                            android:includeFontPadding="false" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:id="@+id/tvTrend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="&#x2192;"
                                android:textColor="@color/glucose_normal"
                                android:textSize="28sp" />

                            <TextView
                                android:id="@+id/tvUnit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="mg/dL"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvRangeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IN RANGE"
                        android:textColor="@color/glucose_normal"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvReadingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Time Range Bar -->
            <LinearLayout
                android:id="@+id/rangeBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:visibility="gone">

                <TextView android:id="@+id/btn1h"
                    android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1"
                    android:gravity="center" android:text="1H" android:textSize="13sp"
                    android:textStyle="bold" android:textColor="#546E7A"
                    android:clickable="true" android:focusable="true" />

                <TextView android:id="@+id/btn3h"
                    android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1"
                    android:gravity="center" android:text="3H" android:textSize="13sp"
                    android:textStyle="bold" android:textColor="#546E7A"
                    android:clickable="true" android:focusable="true" />

                <TextView android:id="@+id/btn6h"
                    android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1"
                    android:gravity="center" android:text="6H" android:textSize="13sp"
                    android:textStyle="bold" android:textColor="#00BCD4"
                    android:clickable="true" android:focusable="true" />

                <TextView android:id="@+id/btn12h"
                    android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1"
                    android:gravity="center" android:text="12H" android:textSize="13sp"
                    android:textStyle="bold" android:textColor="#546E7A"
                    android:clickable="true" android:focusable="true" />

                <TextView android:id="@+id/btn24h"
                    android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1"
                    android:gravity="center" android:text="24H" android:textSize="13sp"
                    android:textStyle="bold" android:textColor="#546E7A"
                    android:clickable="true" android:focusable="true" />

            </LinearLayout>

            <!-- Chart Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/bg_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/glucoseChart"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:padding="8dp" />

            </androidx.cardview.widget.CardView>

            <!-- Insulin Log Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardInsulin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/bg_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="INSULIN LOG"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.12" />

                        <TextView
                            android:id="@+id/tvTotalInsulin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dexcom_cyan"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Dose list container -->
                    <LinearLayout
                        android:id="@+id/insulinListContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <!-- Empty state -->
                    <TextView
                        android:id="@+id/tvNoInsulin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No doses logged yet. Tap + to add."
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:padding="12dp"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Stats Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/bg_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATISTICS"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.12"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                            <TextView android:id="@+id/tvAvgGlucose"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="--" android:textColor="@color/text_primary"
                                android:textSize="24sp" android:textStyle="bold" />
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Avg mg/dL" android:textColor="@color/text_secondary" android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                            <TextView android:id="@+id/tvTimeInRange"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="--%"  android:textColor="@color/glucose_normal"
                                android:textSize="24sp" android:textStyle="bold" />
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="In Range" android:textColor="@color/text_secondary" android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                            <TextView android:id="@+id/tvTimeLow"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="--%"  android:textColor="@color/glucose_low"
                                android:textSize="24sp" android:textStyle="bold" />
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Low"  android:textColor="@color/text_secondary" android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                            <TextView android:id="@+id/tvTimeHigh"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="--%"  android:textColor="@color/glucose_high"
                                android:textSize="24sp" android:textStyle="bold" />
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="High"  android:textColor="@color/text_secondary" android:textSize="11sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvReadingCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Error Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/errorCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1A1010"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#x26A0; Error"
                        android:textColor="@color/glucose_low"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvErrorMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FAB stack: insulin log (top) + refresh (bottom) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:gravity="end">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabInsulin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:backgroundTint="#4A1080"
            app:tint="#FFFFFF"
            android:contentDescription="Log Insulin"
            app:srcCompat="@android:drawable/ic_input_add"
            app:fabSize="normal" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/dexcom_cyan"
            app:tint="#000000"
            android:contentDescription="Refresh"
            app:srcCompat="@android:drawable/ic_menu_rotate"
            app:fabSize="normal" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
